<!DOCTYPE html>

<html>
<head>
  <%- include('template/head') %>
</head>

<body>
  <nav class="navbar">
    <%- include('template/navbar') %>
  </nav>
  <section class="banner">
    <div class="banner__wrapper">
      <h1>存放技術之地</h1>
      <div>Welcome to my blog</div>
    </div>
  </section>
  <div class="container-wrapper">
    <div class="container">
      <% if (errorMessage && errorMessage.length > 0) { %> 
        <div class="warning"><%=errorMessage %></div>
      <% } %>
      <div class="edit-post">
        <% if (typeof article !== 'undefined') { %>
        <form action="/blog/update" method="post">
        <% } else { %>
        <form action="/blog/create" method="POST">
        <% } %>
          <div class="edit-post__title">
            發表文章：
          </div>
          <div class="edit-post__input-wrapper">
            <% if (typeof article !== 'undefined') { %>
              <input class="edit-post__input" name="title" value="<%= article.title%>" />
              <input type="hidden" name="id" value="<%= article.id%>">
            <% } else { %>
              <input class="edit-post__input" name="title" placeholder="請輸入文章標題" />
            <% } %>
          </div>
          <div class="edit-post__input-wrapper">
            <% if (typeof article !== 'undefined') { %>
              <textarea rows="20" class="edit-post__input" name="content"><%= article.content%></textarea>
            <% } else { %>
              <textarea rows="20" name="content" class="edit-post__content"></textarea>
            <% } %>
          </div>
          <div class="edit-post__btn-wrapper">
              <button class="edit-post__btn">送出</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <footer>Copyright © 2020 Who's Blog All Rights Reserved.</footer>
</body>
</html>
