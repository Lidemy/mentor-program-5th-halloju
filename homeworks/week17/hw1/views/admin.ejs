<!DOCTYPE html>

<html>
<head>
  <%- include('template/head') %>
</head>

<body>
  <nav class="navbar">
    <div class="wrapper navbar__wrapper">
      <div class="navbar__site-name">
        <a href='/blog'>Who's Blog</a>
      </div>
      <ul class="navbar__list">
        <div>
          <li><a href="/blog/article_list">文章列表</a></li>
          <li><a href="#">分類專區</a></li>
          <li><a href="#">關於我</a></li>
        </div>
        <div>
          <li><a href="/blog/edit">新增文章</a></li>
          <li><a href="/blog/logout">登出</a></li>
        </div>
      </ul>
    </div>
  </nav>
  <section class="banner">
    <div class="banner__wrapper">
      <h1>存放技術之地</h1>
      <div>Welcome to my blog</div>
    </div>
  </section>
  <div class="container-wrapper">
    <div class="container">
      <div class="admin-posts">

      <% for(let article of articles) { %>
          <div class="admin-post">
            <div class="admin-post__title">
                <%= article.title %>
            </div>
            <div class="admin-post__info">
              <div class="admin-post__created-at">
                <%= article.createdAt %>
              </div>
              <a class="admin-post__btn" href="/blog/edit/<%= article.id %>">
                編輯
              </a>
              <a class="admin-post__btn" href="/blog/delete/<%= article.id %>">
                刪除
              </a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <footer>Copyright © 2020 Who's Blog All Rights Reserved.</footer>
</body>
</html>